pipeline{
    agent any
    stages{
        stage("docker build"){
            steps{
                script{
                    sh "/usr/local/bin/docker build -t vuerx ."
                }
            }
        }
        stage("docker push"){
            steps{
                script{
                    sh "docker push unwash/primero:1.0.0.${BUILD_ID}"
                }
            }
        }
    }
}